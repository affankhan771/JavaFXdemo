<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxdemo.LoginFormController"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: #333333;"
      maxWidth="300">

    <Label text="Login Page" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />

    <TextField fx:id="usernameField" promptText="Username" maxWidth="300"
               style="-fx-background-color: white; -fx-text-fill: black;
                      -fx-prompt-text-fill: gray; -fx-border-color: #555555;
                      -fx-border-radius: 5px; -fx-background-radius: 5px;" />

    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"
                   style="-fx-background-color: white; -fx-text-fill: black;
                          -fx-prompt-text-fill: gray; -fx-border-color: #555555;
                          -fx-border-radius: 5px; -fx-background-radius: 5px;" />

    <Button fx:id="loginButton" text="Login" style="-fx-background-color: #555555; -fx-text-fill: white; -fx-font-size: 14px;
                                                     -fx-border-radius: 5px; -fx-background-radius: 5px;" />
    <Button fx:id="signupButton" text="Signup" style="-fx-background-color: #555555; -fx-text-fill: white; -fx-font-size: 14px;
                                                       -fx-border-radius: 5px; -fx-background-radius: 5px;" />

    <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" />
</VBox>
